@section scripts{

    <script>
        $(document).ready(function () {
            $('#txtUser').DataTable({

                "Processing": true,
                "ServerSide": false,
                "Filter": true
            })

        });
    </script>
}

<script>
    $(".btndelete").click(function (e) {
        e.preventDefault();
        swal("Are you sure to delete?", {
            buttons: {
                yes: {
                    text: "Yes",
                    value: "yes"
                },
                no: {
                    text: "No",
                    value: "no"
                }
            }
        }).then((value) => {
            if (value == "yes") {
                debugger;
                $(this).parent().find(".btnremove").get(0).click();
            }
            return false;
        });
    });
</script>


<script>
    $(".btnupdate").click(function (e) {
        e.preventDefault();
        swal("Are you sure you want to update?", {
            buttons: {
                yes: {
                    text: "Yes",
                    value: "yes"
                },
                no: {
                    text: "No",
                    value: "no"
                }
            }
        }).then((value) => {
            if (value == "yes") {
                debugger;
                $(this).parent().find(".btnUpdates").get(0).click();
            }
            return false;
        });
    });
</script>