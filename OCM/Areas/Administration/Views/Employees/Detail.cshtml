@model OCMDomain.Repository.Edmx.EmployTble
@{
    ViewData["Title"] = "UserDetail";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
    <style>
        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8
        }

        .profile-button {
            background: #BA68C8;
            box-shadow: none;
            border: none
        }

            .profile-button:hover {
                background: #682773
            }

            .profile-button:focus {
                background: #682773;
                box-shadow: none
            }

            .profile-button:active {
                background: #682773;
                box-shadow: none
            }

        .back:hover {
            color: #682773;
            cursor: pointer
        }

        .labels {
            font-size: 11px
        }

        .add-experience:hover {
            background: #BA68C8;
            color: #fff;
            cursor: pointer;
            border: solid 1px #BA68C8
        }
    </style>
</head>
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-right">Employee Profile</h6>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels">First Name</label>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    </div>
                    <div class="col-md-6">
                        <label class="labels">Last Name</label>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Email</label> @Html.EditorFor(model => model.EmpEmail, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                    <div class="col-md-12"><label class="labels">CNIC</label>@Html.EditorFor(model => model.EmpCnic, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                    <div class="col-md-12"><label class="labels">Address</label>@Html.EditorFor(model => model.EmpAddress, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                    <div class="col-md-12"><label class="labels">Driving Lisense</label>@Html.EditorFor(model => model.DrivingLicence, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Gender</label>@Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                    <div class="col-md-6"><label class="labels">Date of Birth</label>@Html.EditorFor(model => model.EmpDob,  new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                    <div class="col-md-6"><label class="labels">Martial Status</label>@Html.EditorFor(model => model.EmpMaritalStatus, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center experience"><h6 class="text-right">Employee Experience</h6></div>
                <div class="d-flex flex-row mt-3 exp-container">
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Qualification</label> @Html.EditorFor(model => model.EmpQualification, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                        <div class="col-md-12"><label class="labels">Specialized Degree</label>@Html.EditorFor(model => model.EmpSpecializedDegree, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                        <div class="col-md-12"><label class="labels">Degree Year</label>@Html.EditorFor(model => model.EmpDegreeYear, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                        <div class="col-md-12"><label class="labels">Experience</label>@Html.EditorFor(model => model.EmpExperience, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                        @* <div class="col-md-12"><label class="labels">Degree Year</label>@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" , @disabled= "disabled" } })</div>*@
                        @*<div class="col-md-12" style="margin-top:15px;"> <a href=@Html.EditorFor(model=>model.EmpDegrePath  , new { htmlAttributes = new { @class = "form-control" , @disabled= "download" } })> Download Degree </a></div>
                            <div class="col-md-12" style="margin-top:15px;"> <a href="#"> Download Experience Letter </a></div>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 border-left">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-right">Employee Reference</h6>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Name</label> @Html.EditorFor(model => model.RefName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                    <div class="col-md-12"><label class="labels">Email</label>@Html.EditorFor(model => model.RefEmail, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                    <div class="col-md-12"><label class="labels">Mobile</label>@Html.EditorFor(model => model.RefMobileNum, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })</div>
                    <div class="col-md-12"><label class="labels">Adress</label>@Html.EditorFor(model => model.RefAddress, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @Type = "Address" } })</div>
                </div>
            </div>
            <a href="~/Administration/Employees/PendingEmploye" style="margin-left:15px"> Back To List </a>
        </div>
    </div>
</div>