@model IEnumerable<OCMDomain.Repository.Edmx.CourseScheduleTble>
@{
    ViewData["Title"] = "PublicTimeTable";
    Layout = "~/Areas/Public/Views/Shared/_PublicLayout.cshtml";
}

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel=" shortcut icon" href="~/images/favicon.png" />
</head>
<body>

    <div class="accordion container" id="accordionExample" style="margin-top:50px; margin-bottom:30px;">
        <div class="page-header">
            <h1>FAQ <small>Frequently Asked Questions</small></h1>
        </div>
        <!-- Bootstrap FAQ - START -->

        <br />
        <br />
        <br />
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            This section contains a wealth of information, related to <strong>Multronica Solutions</strong>. If you cannot find an answer to your question,
            make sure to contact us.
        </div>
        <br />
        <div class="accordion-item">
            @{int i = 1; }
            @foreach (var item in Model)
            {
                <h2 class="accordion-header" id="heading@(i)">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(i)" aria-expanded="false" aria-controls="collapse@(i)" style="font-size:18px">
                        @item.StartDate
                    </button>
                </h2>
                <div id="collapse@(i)" class="accordion-collapse collapse" aria-labelledby="heading@(i)" data-bs-parent="#accordionExample">
                    <div class="accordion-body" style="white-space:pre-line">
                        @item.EndDate
                    </div>
                </div>
                i++;
            }
        </div>
    </div>
</body>
</html>